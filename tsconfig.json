    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false,
    },
    "include": [
        "./src/**/*",   
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}